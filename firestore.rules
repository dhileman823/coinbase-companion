rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/jobs/{document=**} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}